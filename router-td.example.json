{
    "family": "hostly-router",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
        {
            "name": "router",
            "image": "YOUR_ACCOUNT_ID.dkr.ecr.YOUR_REGION.amazonaws.com/hostly-router:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "us-east-1"
                },
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "value": "YOUR_AWS_ACCESS_KEY_ID"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "value": "YOUR_AWS_SECRET_ACCESS_KEY"
                },
                {
                    "name": "BUILD_BUCKET",
                    "value": "your-s3-bucket"
                },
                {
                    "name": "REDIS_URL",
                    "value": "rediss://default:token@redis.upstash.io:6379"
                },
                {
                    "name": "PORT",
                    "value": "80"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/hostly-router",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs/router"
                }
            }
        }
    ]
}